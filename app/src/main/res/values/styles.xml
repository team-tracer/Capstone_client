<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorSkyBlue</item>
        <item name="colorPrimaryDark">@color/colorDarkSky</item>
        <item name="colorAccent">@color/colorSoftSky</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorSkyBlue</item>
        <item name="colorPrimaryDark">@color/colorDarkSky</item>
        <item name="android:windowDisablePreview">true</item>
    </style>
    <style name="Theme.MyDialog" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

</resources>
